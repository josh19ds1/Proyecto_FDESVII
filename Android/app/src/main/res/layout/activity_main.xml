<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginActivity"
    android:background="@drawable/background_color"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="25dp"
        >
        <ImageView
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:src="@drawable/dinersol"
            android:layout_gravity="center"
            android:padding="5dp"
            app:cornerRadius="20dp"
            app:strokeColor="@color/white"
            android:background="@drawable/round_outline"
            android:backgroundTint="#51034f"
            android:radius="10dp"
            android:clipToOutline="true"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sistema De Cafetería UTP"
                android:textColor="#ffffff"
                android:textFontWeight="900"
                android:textStyle="bold"
                android:textSize="20dp"
                />
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ingrese su correo"
            android:textStyle="bold"
            android:textSize="19dp"
            android:textColor="#ffffff"
            />
        <EditText
            android:id="@+id/txtUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Correo@gmail.com"
            android:layout_marginBottom="20dp"
            android:drawableLeft="@drawable/persona_icon"
            android:drawablePadding="10dp"
            android:textColorHint="#ffffff"
            android:textColor="#ffffff"
            android:backgroundTint="#ffffff"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ingrese su contraseña"
            android:textStyle="bold"
            android:textSize="19dp"
            android:textColor="#ffffff"
            />
        <EditText
            android:id="@+id/txtPasss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contraseña"
            android:textColorHint="#ffffff"
            android:textColor="#ffffff"
            android:inputType="textPassword"
            android:layout_marginBottom="20dp"
            android:drawableLeft="@drawable/password_icon"
            android:drawablePadding="10dp"
            android:singleLine="true"
            android:backgroundTint="#ffffff"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LOGIN"
            android:textFontWeight="700"
            android:textSize="18dp"
            android:layout_marginBottom="15dp"
            android:onClick="IniciarSesion"
            style="?attr/materialButtonOutlinedStyle"
            app:cornerRadius="20dp"
            app:strokeColor="#98289c"
            android:textColor="#98289c"
            android:backgroundTint="@color/white"
            android:id="@+id/btnLogin"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="registrarse"
            android:textFontWeight="700"
            android:textSize="18dp"
            android:onClick="Registrarse"
            style="?attr/materialButtonOutlinedStyle"
            app:cornerRadius="20dp"
            app:strokeColor="#98289c"
            android:textColor="#98289c"
            android:backgroundTint="@color/white"
            android:id="@+id/btnRegistrarse"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿OLVIDASTES TU CONTRASEÑA?"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:onClick="RecuperarContraseña"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@drawable/logo_utp"
            android:background="@drawable/rounded_item"
            android:backgroundTint="@color/white"
            android:onClick="Utp"/>

        <ImageView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@drawable/logo_fisc"
            android:layout_marginLeft="30dp"
            android:background="@drawable/rounded_item"
            android:backgroundTint="@color/white"
            android:onClick="UtpFisc"/>

    </LinearLayout>

</LinearLayout>